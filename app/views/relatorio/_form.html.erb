<%= form_for @relatorio, :html => { :class => "form-horizontal relatorio" } do |f| %>

  <% if @relatorio.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@relatorio.errors.count, "error") %> prohibited this relatorio from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @relatorio.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :data, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data) %>
  </div>
  <div class="form-group">
    <%= f.label :departamento_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :departamento_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:departamento_id) %>
  </div>
  <div class="form-group">
    <%= f.label :setor_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :setor_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:setor_id) %>
  </div>
  <div class="form-group">
    <%= f.label :anomalia, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :anomalia, :class => 'form-control' %>
    </div>
    <%=f.error_span(:anomalia) %>
  </div>
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :descricao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:descricao) %>
  </div>
  <div class="form-group">
    <%= f.label :acao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :acao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:acao) %>
  </div>
  <div class="form-group">
    <%= f.label :grupodeanalise, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :grupodeanalise, :class => 'form-control' %>
    </div>
    <%=f.error_span(:grupodeanalise) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                relatorios_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
